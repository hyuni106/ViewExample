                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#555555"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
