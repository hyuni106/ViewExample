                        android:textColor="#000000"/>

                </LinearLayout>


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#555555"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
